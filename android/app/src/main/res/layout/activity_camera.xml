<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Live camera preview (viewfinder) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Bottom controls overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#CC000000"
        android:gravity="center_vertical">

        <!-- Small thumbnail of latest captured frame from analysis loop -->
        <ImageView
            android:id="@+id/thumbnail_view"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:background="#333333"
            android:contentDescription="Latest captured frame" />

        <!-- Info + save button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="4dp"
            android:gravity="center">

            <!-- Resolution info -->
            <TextView
                android:id="@+id/resolution_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resolution: --"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:fontFamily="monospace" />

            <!-- AF/AE/AWB status -->
            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AF/AE/AWB: --"
                android:textColor="#FFCC00"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <!-- Save button -->
            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Save Frame"
                android:layout_marginTop="8dp"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
